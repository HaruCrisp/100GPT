{
  "manifest_version": 3,
  "name": "100GPT",
  "version": "1.0.0",
  "description": "Paraphrase text or screenshots using AI.",
  "permissions": ["contextMenus", "activeTab", "storage", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}

